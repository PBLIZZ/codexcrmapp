{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "lib": ["es2022", "dom", "dom.iterable", "esnext"],
    "paths": {
      "@codexcrm/trpc": ["./src/index.ts"],
      "@trpc/react-query": ["../../node_modules/@trpc/react-query"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}