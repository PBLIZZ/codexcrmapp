{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Build output configuration
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,

    // Auth package specific
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "bundler",

    // Monorepo and package paths - using root-relative paths
    "baseUrl": "../..",
    "paths": {
      // Monorepo packages using aliases from root
      "@codexcrm/api/*": ["packages/api/src/*"],
      "@codexcrm/auth/*": ["packages/auth/src/*"],
      "@codexcrm/config/*": ["packages/config/src/*"],
      "@codexcrm/db/*": ["packages/db/src/*"],
      "@codexcrm/jobs/*": ["packages/jobs/src/*"],
      "@codexcrm/ui/*": ["packages/ui/src/*"],
      "@/*": ["apps/web/*"],
      // Local paths
      "@/auth/*": ["packages/auth/src/*"]
    }
  },

  "include": ["src/**/*"],

  "exclude": ["node_modules", "dist", "**/*.test.{ts,tsx}", "**/*.spec.{ts,tsx}"]
}
