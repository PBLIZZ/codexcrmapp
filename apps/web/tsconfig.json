{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Next.js specific overrides
    "jsx": "preserve",
    "jsxImportSource": "react",

    // Next.js plugin for enhanced type checking
    "plugins": [
      {
        "name": "next"
      }
    ],

    // Let Next.js handle emitting JS
    "noEmit": true,

    // Next.js specific libraries
    "lib": ["dom", "dom.iterable", "esnext"],

    // Performance for development
    "incremental": true,
    "tsBuildInfoFile": ".next/.tsbuildinfo",

    // App-specific path mappings
    "baseUrl": ".",
    "paths": {
      // Monorepo package paths (relative to apps/web)
      "@codexcrm/server/*": ["../../packages/server/src/*"],
      "@codexcrm/auth/*": ["../../packages/auth/src/*"],
      "@codexcrm/config/*": ["../../packages/config/src/*"],
      "@codexcrm/database/*": ["../../packages/database/src/*"],
      "@codexcrm/jobs/*": ["../../packages/jobs/src/*"],
      "@codexcrm/ui/*": ["../../packages/ui/src/*"],
      // App-specific paths
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/app/*": ["./app/*"],
      "@/types/*": ["./types/*"],
      "@/utils/*": ["./lib/utils/*"]
    }
  },

  // Files the app should compile
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "types/**/*.d.ts"],

  // Exclude unnecessary files
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
