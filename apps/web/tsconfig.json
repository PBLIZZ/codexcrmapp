{
  "extends": "@codexcrm/config/typescript/nextjs",
  "compilerOptions": {
    "tsBuildInfoFile": ".next/tsconfig.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@codexcrm/ui": [
        "../../packages/ui/src"
      ],
      "@codexcrm/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@codexcrm/database": [
        "../../packages/database/src"
      ],
      "@codexcrm/database/*": [
        "../../packages/database/src/*"
      ]
    },
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../ContactsView.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
