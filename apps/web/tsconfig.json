{
  /* Inherit all compilerOptions & paths from the repo‑root tsconfig.json */
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    /* === App‑specific tweaks === */
    "baseUrl": ".", // enables "@/..." alias below
    "paths": {
      "@/*": [
        "./*" // Points to apps/web root, aligning with actual structure
      ] // internal alias for app code
    },
    /* Next.js / React settings */
    "jsxImportSource": "react",
    "plugins": [
      {
        "name": "next"
      }
    ],
    /* Let Next.js handle emitting JS */
    "noEmit": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  /* Files the app should compile */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
