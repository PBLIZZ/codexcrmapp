{
  "name": "codexcrmapp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "node packages/dev-scripts/eslint/ci-lint-guardrail.js --check",
      "eslint --max-warnings 0 --fix"
    ]
