{
  "name": "codexcrm-monorepo",
  "version": "1.0.1",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.12.4",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo clean",
    "typecheck": "turbo typecheck",
    "prepare": "husky"
  },
  "pnpm": {
    "overrides": {
      "@trpc/client": "11.4.3",
      "@trpc/server": "11.4.3",
      "@trpc/react-query": "11.4.3",
      "@trpc/next": "11.4.3"
    },
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "@tailwindcss/oxide",
      "esbuild",
      "prisma",
      "sharp",
      "supabase",
      "unrs-resolver"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "prettier": "@codexcrm/config-prettier",
  "devDependencies": {
    "@codexcrm/config-eslint": "workspace:*",
    "@codexcrm/config-prettier": "workspace:*",
    "@codexcrm/config-typescript": "workspace:*",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "prisma": "6.11.1",
    "rimraf": "^6.0.1",
    "task-master": "^2.3.0",
    "task-master-ai": "^0.19.0",
    "tsup": "^8.2.3",
    "turbo": "^2.5.5",
    "typescript": "^5.6.0"
  }
}