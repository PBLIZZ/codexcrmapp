    "lint:list": "node packages/dev-scripts/eslint/ci-lint-guardrail.js --list",
    "lint:add": "node packages/dev-scripts/eslint/ci-lint-guardrail.js --add",
    "lint:remove": "node packages/dev-scripts/eslint/ci-lint-guardrail.js --remove",
    "lint:fix-legacy": "node packages/dev-scripts/eslint/fix-legacy-files.js --all",
    "lint:fix-legacy-file": "node packages/dev-scripts/eslint/fix-legacy-files.js --file",
    "prepare": "husky"
